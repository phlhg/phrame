AddDefaultCharset UTF-8

# Options 
Options -Indexes
#Options -MultiViews

# Enable URI rewriting
RewriteEngine on
RewriteBase /

# Redirect to https://
#RewriteCond %{HTTPS} off
#RewriteRule .* https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Add a slash to the end of the uri
RewriteCond %{REQUEST_URI} !\.([a-zA-Z0-9]{2,5})$
RewriteRule ^.*[^/]$ /$0/ [L,R]

# Give direct access to "app/resource/"
RewriteCond %{DOCUMENT_ROOT}phrame/app/resources%{REQUEST_URI} -f
RewriteRule ^(.*)$ /phrame/app/resources%{REQUEST_URI} [QSA,L]

# Give diretc access to "default/resource/"
#RewriteCond %{DOCUMENT_ROOT}phrame/default/resources%{REQUEST_URI} -f
RewriteCond %{REQUEST_URI} ^\/phramer\/.*$
RewriteRule ^phramer\/(.*)$ /phrame/default/resources/$1 [QSA,L]

# Give direct access to existing files
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ index.php [QSA,L]

# Error Handling
ErrorDocument 400 /err/?e=400
ErrorDocument 401 /err/?e=401
ErrorDocument 403 /err/?e=403
ErrorDocument 404 /err/?e=404
ErrorDocument 500 /err/?e=500